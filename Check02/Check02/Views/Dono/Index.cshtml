@model IEnumerable<Check02.Models.MdDono>

@{
    ViewBag.Title = "Donos";
}

<h2>Donos</h2>

<p>
    @Html.ActionLink("Cadastrar um dono", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NmDono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NmDono)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Convert.ToDateTime(item.Nascimento).ToString("dd/MM/yyyy")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cpf)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.IdDono }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.IdDono }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.IdDono })
    </td>
</tr>
}

</table>
